{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-undef": "off",
    "no-param-reassign": ["error", { "props": false }],
    "keyword-spacing": [
      "error",
      {
        "overrides": {
          "if": { "after": false },
          "for": { "after": false },
          "while": { "after": false }
        }
      }
    ],
    "prefer-arrow-callback": "off",
    "func-names": ["warn", "never"],
    "object-shorthand": ["error", "never"],
    "prefer-template": "off",
    "no-underscore-dangle": [
      "error",
      { "allow": ["_length", "_getContatos", "_getContato", "_saveContato"] }
    ]
  }
}
